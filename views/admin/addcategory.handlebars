{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
{{/each}}
<h3>Nova Categoria</h3>
<div class="card bg-light border-dark mt-4">
    <div class="card-body">
        <form action="/admin/category/new" method="POST">
            <label for="name">Nome: </label>
                <input type="text" id="name" name="name" placeholder="Nome da categoria" class="form-control" required>
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" required>
                <br>
            <button type="submit" class="btn btn-outline-success">Criar Categoria</button>
        </form>
    </div>
</div>



